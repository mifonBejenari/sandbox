{# layout.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="fonts/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="styles/css/style.css">
    <title>{{ page_title }}</title>

</head>
<body>
    {% block page %}
    {% endblock %}
    
    <div class="container container-flex">
        {% for object in content %}
            <div class="card card-size">
                <div class="card_title card_element-padding">
                    <a href="{{ object.link_title }}" class="link card_link card_link_title">
                        {{ object.title }}
                    </a>
                </div>
                <div class="card_img">
                    <a href="{{ object.img }}" class="link card_link card_link_img">
                        <img src="{{ object.img }}" alt="">
                    </a>
                </div>
                <div class="card_description card_element-padding">
                    <p class="card_description_wrapper">
                        {{ object.description }}
                    </p>
                </div>
                <div class="card_autor-wrapper card_element-padding">
                    <div class="card_autor">
                        <a href="{{ object.autor }}" class="link card_link card_link_autor">
                            {{ object.autor }}
                        </a>
                    </div>
                    <div class="card_icon">
                        <i class="{{ object.icon }}"></i>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

</body>
</html>